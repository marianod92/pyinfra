{
    "args": ["someuser", []],
    "kwargs": {
        "with_grant_option": true
    },
    "facts": {
        "mysql.MysqlUserGrants": {
            "user=someuser, user_hostname=localhost, mysql_user=None, mysql_password=None, mysql_host=None, mysql_port=None": {
                "*.*": {
                    "privileges": []
                }
            }
        }
    },
    "commands": [
        "mysql -Be 'GRANT GRANT OPTION ON *.* TO \"someuser\"@\"localhost\"'",
        "mysql -Be 'FLUSH PRIVILEGES'"
    ],
    "idempotent": false
}
